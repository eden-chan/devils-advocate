{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2015",
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["src/__tests__/__examples__"]
}
